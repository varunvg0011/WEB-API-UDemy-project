@model Villa_WebApp.Models.VM.VillaNumberDeleteVM



    <form asp-action="DeleteVillaNumber">
        <br />
        <div class = "container border p-3">
            <h1 class = "text-primary">Delete Villa</h1>
            <hr />

            <div class = "row">
                @*when we post this page, we recieve this property*@
                <input hidden asp-for="VillaNumber.VillaNo"/>
                <div class="col-2">
                    <label asp-for="VillaNumber.VillaNo" class = "control-label pt-2" style="font-size:20px;"></label>
                </div>
                <div class="col-10 pb-2">
                    <input asp-for="VillaNumber.VillaNo" disabled readonly class="form-control" />
                    
                </div>

                <div class="col-2">
                    <label asp-for="VillaNumber.VillaID" class = "control-label pt-2" style="font-size:20px;"></label>
                </div>
                <div class="col-10 pb-2">
                    <select asp-for="VillaNumber.VillaID" disabled class="form-select" asp-items="@Model.VillaList">
                        <option disabled selected>--Select Villa--</option>
                    </select>
                    
                </div>
                <div class="col-2">
                    <label asp-for="VillaNumber.SpecialDetails" class = "control-label pt-2" style="font-size:20px;"></label>
                </div>
                <div class="col-10 pb-2">
                    <textarea asp-for="VillaNumber.SpecialDetails" disabled readonly class="form-control" rows="5"></textarea>
                    
                </div>

                 
                <div class="col-5 offset-2">
                    <a asp-action="IndexVillaNumber" asp-controller="VillaNumber" class="btn-primary btn form-control">Back To List</a>
                </div>
                <div class="col-5">
                    <input type="submit" value="Delete" class="btn btn-success form-control" />
                </div>
            </div>
            
        </div>
    </form>



    @section Scripts{
        <partial name="_ValidationScriptsPartial" />
    }
