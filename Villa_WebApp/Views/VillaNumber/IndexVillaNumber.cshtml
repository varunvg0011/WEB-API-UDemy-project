@model IEnumerable<Villa_WebApp.Models.DTO.VillaNumberDTO>



<div class="container p-4 border">
    <div class=row pb-2>
        <div class="col">
            <h1 class="text-primary">VillaNumber List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="VillaNumber" asp-action="CreateVillaNumber" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i>Create new VillaNumber</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Villa Name
                </th>
                <th>
                    Villa Number
                </th>
                
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model){
                <tr>
                    <td>@item.Villa.Name</td>
                    <td>@item.VillaID</td>
                    
                    <td>
                        <a asp-controller="Villa" asp-action="UpdateVillaNumber" asp-route-villaNo="@item.VillaNo" class="btn btn-outline-success"><i class="bi bi-pencil-square"></i></a>
                        <a asp-controller="Villa" asp-action="DeleteVillaNumber" asp-route-villaNo="@item.VillaNo"  class="btn btn-outline-danger"><i class="bi bi-trash3-fill"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>